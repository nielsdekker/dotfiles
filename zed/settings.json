// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "codellama:34b"
    },
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "model_parameters": []
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "ui_font_size": 16,
  "use_autoclose": false,
  "buffer_font_size": 15,
  "ui_font_family": "Cascadia Code NF",
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },

  // Window decorations
  "title_bar": {
    "show_sign_in": false,
    "show_project_items": false
  },
  "toolbar": {
    // Disabling all hides it
    "selections_menu": false,
    "code_actions": false,
    "breadcrumbs": false,
    "agent_review": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "status_bar": {
    "experimental.show": true
  },

  // Language specific settings
  "languages": {
    "Kotlin": {
      "language_servers": ["kotlin-lsp"]
    }
  }
}
