# Theming
theme = Sonokai
font-family = "Cascadia Code"
window-padding-x = 8
window-padding-y = 8
window-theme = ghostty

gtk-titlebar-style = tabs 

# General settings
copy-on-select = clipboard
window-new-tab-position = end
mouse-hide-while-typing = true
app-notifications = no-clipboard-copy

# Start with a clean slate
keybind = clear

# Generic key binds
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+a>x=close_surface
keybind = ctrl+a>k=toggle_command_palette

############
# Navigation
############

# Tabs
keybind = ctrl+t=new_tab
keybind = ctrl+[=previous_tab
keybind = ctrl+]=next_tab
keybind = ctrl+shift+[=move_tab:-1
keybind = ctrl+shift+]=move_tab:+1

# Panes
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right

keybind = ctrl+shift+h=new_split:left
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+l=new_split:right

# Index based navigation
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=goto_tab:9
